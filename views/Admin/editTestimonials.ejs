<div>
  <form action="/admin/testimonials/<%= testimonial._id %>?_method=PUT" method="POST" enctype="multipart/form-data" id="mainForm" role="form">
    <div class="row">
      <!-- title -->
      <div class="col-6">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" name="name" placeholder="Name" class="form-control" required="required" value="<%= testimonial.name %>">
        </div>
      </div>

      <div class="col-6">
        <div class="form-group">
          <label for="name">Branch</label>
          <input type="text" name="branch" placeholder="Branch" class="form-control" required="required" value="<%= testimonial.branch %>">
        </div>
      </div>
    </div>
  
    <!-- description -->
    <div class="row">
  
      <div class="col-lg-12 col-12">
        <div class="card card-outline card-info">
          <div class="card-header">
            <h3 class="card-title">
              Enter Content for Testimonial
  
            </h3>
          </div>

          <div class="card-body pad">
            <div class="mb-3">
              <textarea name="content" class="form-control" rows="3" required="required"><%= testimonial.content %></textarea>
            </div>
          </div>
        </div>
      </div>
  
    </div>
    
    <!-- image -->
    <div class="row">
      <div class="col-lg-12 col-12">
        
        <div class="form-group">
          <div class="custom-file ">
            <label class="custom-file-label" for="image" style="overflow: hidden;" >Choose a file...</label>
            <input type="file" id="selectImages" accept=".jpg,.jpeg,.png" name="image" class="custom-file-input">
          </div>
          
        </div>
        <small>
          <i class="fas fa-exclamation-circle"></i>
          Max Size: 1 MB
        </small>
        <ul id="selectedImages">
        
        </ul>

      </div> <br>
    </div>
    <!-- /.card-body -->
  
    <div>
      <button id="addTestimonialButton" type="submit" class="btn btn-block btn-primary btn-lg" form="mainForm">
        <i id="submit-btn-icon" class="fas fa-upload"></i> 
        <span id="spinner" style="vertical-align: middle;" role="status" aria-hidden="true"></span>
        Update
      </button><br>
    </div>
  </form>

