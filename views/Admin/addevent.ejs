      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <!-- Small boxes (Stat box) -->
          <div class="row">

            <!-- ./col -->

            <!-- ./col -->
            <div class="col-lg-12">
                <h1 class="m-0 text-dark text-center">Add Events</h1>
            </div>
            <!-- ./col -->

            <!-- ./col -->
          </div>
          <!-- /.row -->
          <!-- Main row -->
          <div class="row">
            <!-- Left col -->
            <section class="col-lg-12"><br>

              <div>
                  <h1 class="m-0 text-dark text-center"></h1>
              </div>

              <div>
                <form action="/events" method="POST" enctype="multipart/form-data" id="mainForm" role="form">
                  <div class="row">
                    <!-- title -->
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" name="title" placeholder="Title" class="form-control" required="required">
                      </div>
                    </div>
              
                    <!-- date -->
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label>Date</label>
                        <div class="input-group date" id="reservationdate" data-target-input="nearest">
                          <input type="text" name="date" id="datepicker" class="form-control" required="required" placeholder="Pick Date" autocomplete="off">
                        </div>
              
                      </div>
                    </div>
                  </div>
              
                  <!-- description -->
                  <div class="row">
              
                    <div class="col-lg-12 col-12">
                      <div class="card card-outline card-info">
                        <div class="card-header">
                          <h3 class="card-title">
                            Enter Description for Event
              
                          </h3>
                         
                          <!-- /. tools -->
                        </div>
                        <!-- /.card-header -->
                        
              
                        <div class="card-body pad">
                          <div class="mb-3">
                            <textarea name="desc" id="summernote"></textarea>
                          </div>
                        </div>
                      </div>
                    </div>
              
                  </div>
              
                  <!-- image -->
                  <div class="row">
                    <div class="col-lg-12 col-12">
                      
                      <div class="form-group">
                        <div class="custom-file ">
                          <label class="custom-file-label" for="thumbnail">Choose Thumbnail image...</label>
                          <input type="file" id="thumbnail-input" accept=".jpg,.jpeg,.png" name="thumbnail" class="custom-file-input"
                            required="required">
                        </div>
                        
                        <div class="px-2 small">
                          Recommended ratio - 3:2 (width:height), for proper look
                        </div>
                      </div>
              
                    </div> 

                    <div class="col-lg-12 col-12">
                      
                      <div class="form-group">
                        <div class="custom-file ">
                          <label class="custom-file-label" for="images">Choose images...</label>
                          <input type="file" id="selectImages" accept=".jpg,.jpeg,.png" name="images" class="custom-file-input"
                            multiple="multiple" required="required">
                        </div>
                        
                        <div class="px-2 small">
                          Max Count: 5 | Max Size: 2MB/Image | Recommended - same width & height for all images
                        </div>
                      </div>
                      <ul id="selectedImages">
            
                      </ul>
              
                    </div> <br>
                  </div>
                  <!-- /.card-body -->
              
                  <div>
                    <button type="submit" class="btn btn-block btn-primary btn-lg" form="mainForm">
                      <i id="submit-btn-icon" class="fas fa-plus"></i>
                      <span id="spinner" style="vertical-align: middle;" role="status" aria-hidden="true"></span>
                      Add Event
                    </button><br>
                  </div>
                </form>
              
              </div>
      </section>
