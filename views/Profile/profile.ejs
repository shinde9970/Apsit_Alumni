    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0-rc.0/js/select2.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    
    <script type="text/javascript">
        // select2 multi
        $(document).ready(function() {
            $('.select2-skills').select2({
                placeholder: "Type to search..",
                sorter: data => data.sort((a, b) => a.text.localeCompare(b.text))
            });

            //select2 simple
            $(".select2-simple").select2({
                minimumResultsForSearch: Infinity,
            });
            /* show selected file name */
            $(".custom-file-input").on("change", function() {
                var $this = $(this);
    
                var fileName = $this.val().split("\\").pop();
                $this.siblings(".custom-file-label").addClass("selected").html(fileName);
    
                /* preview */
                URL.revokeObjectURL($("#profile-img-container img").attr("src"));
                $("#profile-img-container").html('<img src="" id="profile-img" width="200" height="200">');
                $("#profile-img-container img").attr("src", window.URL.createObjectURL($this[0].files[0]));
            });
    
            $("#customSwitch1").on("click", function() {
                $("#hide-jobTill").toggle();
            })
    
            // fill gender
            var temp_gender = $("#data-gender").text();
            if( temp_gender == "male")
                $("#male").attr("checked", "checked");
            else if ( temp_gender == "female")
                $("#female").attr("checked", "checked");
            else if ( temp_gender == "other" )
                $("#other").attr("checked", "checked");
            
            // fill dob
            var temp_dob = $("#data-dob").text();
            
            /* date picker for dob */
            var startDate = new Date(1991, 1 - 1, 1), endDate = new Date(new Date().getFullYear() - 18, 12 - 1, 31);
    
            $("#dob-datepicker").datepicker({
                autoclose: true,
                disableTouchKeyboard: true,
                format: "dd MM, yyyy",
                startDate: startDate,
                endDate: endDate
            });
    
            $("#dob-datepicker").datepicker( "setDate", new Date(temp_dob) );
    
            /* month picker for job */
            var endDate = new Date();
    
            $(".month-picker").datepicker({
                autoclose: true,
                disableTouchKeyboard: true,
                // startDate: startDate,
                endDate: endDate,
                format: "M, yyyy",
                startView: "months",
                minViewMode: "months"
            });
            
    
            // fill admission year
            var temp_year_addmission = $("#data-year-addmission").text();
            for(var i = 2010; i<=new Date().getFullYear(); i++) {
                if ( i == temp_year_addmission ) {
                    $('#yearOfAdmission').append($("<option></option>")
                                            .attr("value", i)
                                            .attr("selected", "selected")
                                            .text(i));
                } else {
                    $('#yearOfAdmission').append($("<option></option>")
                                            .attr("value", i)
                                            .text(i));
                }
            }
    
            // fill graduation year
            var temp_year_graduation = $("#data-year-graduation").text();
            for(var i = 2014; i<=new Date().getFullYear()+4; i++) {
                if ( i == temp_year_graduation ) {
                    $('#yearOfGraduation').append($("<option></option>")
                                            .attr("value", i)
                                            .attr("selected", "selected")
                                            .text(i));
                } else {
                    $('#yearOfGraduation').append($("<option></option>")
                                            .attr("value", i)
                                            .text(i));
                }
            }
    
            // fill branch
            var branches = ["IT", "Mech", "CS"];
            var temp_branch = $("#data-branch").text();
            for(var i = 0; i<branches.length; i++) {
                if ( branches[i] == temp_branch ) {
                    $('#branch').append($("<option></option>")
                                            .attr("value", branches[i])
                                            .attr("selected", "selected")
                                            .text(branches[i]));
                } else {
                    $('#branch').append($("<option></option>")
                                            .attr("value", branches[i])
                                            .text(branches[i]));
                }
            }
    
            $(".show-pass").on("click", function() {
                var $this = $(this);
                $this.find("i").toggleClass("fa-eye fa-eye-slash");
    
                var $input = $this.parent().parent().find("input");
                if($input.attr("type") == "password")
                    $input.attr("type", "text");
                else
                    $input.attr("type", "password");
            });
    
            $("#password, #confirmpassword").on("keyup", function() {
                var $password = $("#password").val();
                var $confirmpassword = $("#confirmpassword").val(); 
                var $password_info = $("#password-info");
                if($password === $confirmpassword) {
                    $password_info.html('<small class="text-success"><i class="fas fa-check-circle"></i> Passwords Matched</small>');
                } else {
                    $password_info.html('<small class="text-danger"><i class="fas fa-exclamation-circle"></i> Passwords Mismatched</small>');
                }
            });
        });
    </script>
</body>
