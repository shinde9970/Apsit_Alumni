    <link rel="stylesheet" href="/assets/css/chat.css">
</head>
<body>
    <!-- ======= Header ======= -->
  <header id="header" class="fixed-top header-inner-pages">
    <div class="container d-flex align-items-center">
  
      <h1 class="align-items-center mr-auto"><a href="#"><img id="main_logo" src="assets/img/logo.png" alt="APSIT" height="100px"></a></h1>
      <!-- Uncomment below if you prefer to use an image logo -->
      <!-- <a href="index.html" class="logo mr-auto"><img src="../assets/img/logo.png" alt="" class="img-fluid"></a>-->
  
      <nav class="nav-menu d-none d-lg-block">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/news">News</a></li>
          <li><a href="/events">Events</a></li>
          <li><a href="/contribute">Contribute</a></li>
          <li><a href="/communicate">Communicate</a></li>

          <li class="drop-down active"><a href="#"><%= loggedInUser.firstName %> <i class="fas fa-angle-down"></i></a>
            <ul>
              <li><a href="/profile"><i class="fas fa-user pr-1"></i>Profile</a></li>
              <li class="active"><a href="#chats"><i class="fas fa-comments pr-1"></i>Chats</a></li>
              <li><a href="/logout"><i class="fas fa-sign-out-alt pr-1"></i>Logout</a></li>
            </ul>
          </li>
          
        </ul>
      </nav><!-- .nav-menu -->

    </div>
  </header><!-- End Header -->

  <main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs"><br><br><br>
        <div class="container">
  
          <ol>
            <li><a href="/">Home</a></li>
            <li>Chats</li>
          </ol>
          <h2>Chats</h2>
  
        </div>
    </section><!-- End Breadcrumbs -->


    <section id="chats" class="services section-bg">
        <div class="container">
  
          <!-- <div class="section-title">
            <h2>Chats</h2>
          </div> -->
        </div>

        <div  id="original">
            <div class="container">
                <div class="row" id="main-content">
                    <div id="utils-pane" class="col-12">
                        <div id="utils-pane-header" class="text-center d-flex justify-content-center">
                          <div id="header-content" class="align-self-center">Chats</div>
                        </div>
                        <div id="user-pane">

                        </div>
                    </div>
                    <div id="chat-pane" class="col-12">
                        <div id="selcted-user-details">
                          <span id="back-btn" class="fas fa-arrow-left">&nbsp;</span>
                          <span id="chat-user-image" class="fas fa-user"></span>

                          <span class="d-flex flex-column">
                            <span><a id="chat-username-link" href=""><span id="chat-username"></span></a></span>
                            
                            <span id="chat-user-status"></span>
                          </span>

                          <span class="ml-auto" id="menu-btn" data-toggle="tooltip" data-placement="bottom" title="Menu"><i class="fas fa-ellipsis-v"></i></span>
                          
                          <div id="menu-container" class="flex flex-column">
                            <div id="menu-option-clear" class="menu-option">Clear Chat</div>
                            <div id="menu-option-delete" class="menu-option">Delete Chat</div>
                          </div>
                        </div>
                        <div id="message-pane" hidden="hidden">
                            
                        </div>
                        <div id="type-pane" class="d-none justify-content-center align-items-center">
                          <textarea id="send-message" class="form-control ml-2" placeholder="Enter your message..." cols="30" rows="1"></textarea>
                          <button id="send-btn" class="btn btn-success rounded-circle mx-2"><i class="fas fa-paper-plane"></i></button>
                        </div>
                    </div>
                </div>
                </ul>
            </div>
        </div>

    </section>

  </main>

  <%- include ('./partials/footer'); -%>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.0.1/socket.io.js"></script>
