								  <i class="far fa-check-circle text-success"></i>
								  <strong class="mr-auto">&nbsp;Success.</strong>
								  <button type="button" class="ml-2 mb-1 close close-toast" data-dismiss="toast" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								  </button>
								</div>
							  <div class="toast-body">
									<%= successMessage %>
							  </div>
						  </div>
					  </div>
				  </div>
				  
			  <% } else if(errorMessage && errorMessage.length>0 ){ %>
				  <div class="col-lg-6 col-md-12">
					  <div aria-live="polite" aria-atomic="true" style="position: relative; min-height: 100px;">
						  <div class="toast border border-warning" data-autohide="false" style="position: absolute; top: 0; right: 0;">
							  <div class="toast-header">
								  <i class="fas fa-exclamation-circle text-warning"></i>
								  <strong class="mr-auto">&nbsp;Failed.</strong>
								  <button type="button" class="ml-2 mb-1 close close-toast" data-dismiss="toast" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								  </button>
								</div>
							  <div class="toast-body">
									  <%= errorMessage %>
							  </div>
						  </div>
					  </div>
				  </div>
				  
			  <% } %>
			  <!-- end flash message -->
			</div>

		  </div>

