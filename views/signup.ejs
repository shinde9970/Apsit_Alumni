		<section id="" class="inner-page section-bg">
		  <div class="container">

			<div class="section-title">
				<h2>User SignUp</h2>
			  </div>
			
              <div class="limiter">
                <div class="container-login100">
                    <div class="wrap-login100 p-t-10 p-b-30">
        
                        <form action="/signup" method="POST" id="signUpForm" class="login100-form validate-form">
                            <div class="row">
                                <div class="wrap-input100 m-b-10 col-lg-6">
                                    <input class="input100" type="text" name="firstName" placeholder="First Name" required="required" pattern="[a-zA-z]{1,}" maxlength="20" 
                                    oninvalid="this.setCustomValidity('Not Valid First Name')"
                                    onchange="try{setCustomValidity('')}catch(e){}"
                                    oninput="setCustomValidity(' ')" >
                                    <span class="focus-input100"></span>
                                </div>
            
                                <div class="wrap-input100 m-b-10 col-lg-6">
                                    <input class="input100" type="text" name="lastName" placeholder="Last Name" required="required" pattern="[a-zA-z]{1,}" maxlength="20"
                                    oninvalid="this.setCustomValidity('Not Valid Last Name')"
                                    onchange="try{setCustomValidity('')}catch(e){}"
                                    oninput="setCustomValidity(' ')">
                                    <span class="focus-input100"></span>
                                </div>
        
                            </div>
        
                            <div class="row">
                                <div class="wrap-input100 validate-input m-b-15 col-12" data-validate="Please enter email: ex@abc.xyz">
                                    <input class="input100" type="email" name="username" placeholder="Email" required="required">
                                    <span class="focus-input100"></span>
                                </div>
        
                                <div class="wrap-input100 validate-input m-b-15 col-12" data-validate="Please enter password">
                                    <span class="btn-show-pass">
                                        <i class="fas fa-eye"></i>
                                    </span>
                                    <input class="input100" type="password" name="password" placeholder="Password (min 6 characters)" id="password" minlength="6" maxlength="20" required="required">
                                    <span class="focus-input100"></span>
                                </div>
        
        
                                <div class="wrap-input100 validate-input col-12" data-validate="Please enter password">
                                    <span class="btn-show-pass">
                                        <i class="fas fa-eye"></i>
                                    </span>
                                    <input class="input100" type="password" name="confirmPassword" placeholder="Confirm Password" id="confirmPassword" minlength="6" maxlength="20" required="required">
                                    <span class="focus-input100"></span>
                                </div>
                            </div>
        
                            
                            <div id="passwordInfo" class="form-text text-muted text-center m-b-20"></div>
        
                            <div class="row">
                                <div class="col-12 px-0 wrap-input100 m-b-20" style="z-index: unset;">
                                        <!-- <label for="userType">Who are you?</label> -->
                                        <select name="userType" class="input100 select2-simple" required="required" style="border: none;">
                                            <option class="wrap-input100" value="" aria-placeholder="aaaaaaa">Select User Type</option>
                                            <option class="wrap-input100" value="alumni">Alumni</option>
                                            <option class="wrap-input100" value="student">Student</option>
                                        </select>
                                    </div>
                            </div>
                            
        
                            <!-- <br> -->
                        </form>
						<form action="/oauth/google" id="googleSignUpForm"></form>
                        <div class="row">
                            <div class="container-login100-form-btn col-12 mb-2">
                                <button class="login100-form-btn width-100" form="signUpForm">
                                    <i class="fas fa-user-plus p-r-5"></i>
                                    SignUp
                                </button>
                            </div>
                            <div class="container-login100-form-btn col-12">
                                
								<button class="login100-form-btn google width-100" form="googleSignUpForm">
									<div>
										<i class="fab fa-google p-r-5"></i>
									</div>
									SignUp With Google
								</button>
                            </div>
							
                        </div>
        
                        <div class="flex-col-c p-t-30">
                            <span class="txt2 p-b-10">
